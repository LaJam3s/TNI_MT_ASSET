using System;
					
public class Program
{
	public static void Main()
	{
		Console.WriteLine("Please provide you idendification username :"); //Line displaying above readline.
		string name = Console.ReadLine(); 
		
		Console.WriteLine("Your name is {0} \Welcome!", name); //Line displaying after input from readline.
		
	}
}

// Converting string id to int number and plus

using System;
					
public class Program
{
	public static void Main()
	{
		Console.WriteLine("Please provide you idendification username :");
		string name = Console.ReadLine();
		int a = Convert.ToInt16(name);
		
		Console.WriteLine("Hello Officer, {0}", a + 5);
		
	}
}	

// Parse convert string to non-string, ToInt10-32 converts non-string into string

using System;
					
public class Program
{
	public static void Main()
	{
		Console.WriteLine("Please provide your idendification :");
		string name = Console.ReadLine();
		int a = int.Parse(name);
		
		Console.WriteLine("Number is, {0}", a + 5);
		
	}
}	

//Compiling function from 2 lines into 1 line

using System;
					
public class Program
{
	public static void Main()
	{
		Console.WriteLine("Please provide your idendification :");
		int a = int.Parse(Console.ReadLine()); //This line is compiled with string, view above for clue
		
		Console.WriteLine("Number is, {0}", a + 5);
		
	}
}	

//Prases

using System;
					
public class Program
{
	public static void Main()
	{
		
		int a = int.Parse(Console.ReadLine());
		float b = float.Parse(Console.ReadLine());
		char c  = char.Parse(Console.ReadLine());
		string d = Console.ReadLine();
		
	}
}	

// Calandar converting code

using System;
					
public class Program
{
	public static void Main()
	{
		
		Console.Write("Input the BE : ");
		int BE = int.Parse(Console.ReadLine());
		int AD = BE - 543;
		Console.WriteLine("BE is {0} AD is {1}",BE, AD);
		
	}
}	

// Currency Converter

using System;
					
public class Program
{
	public static void Main()
	{
		// Currency converting cal.
		Console.Write("Input the EUR amount: ");
		float EUR = float.Parse(Console.ReadLine());
		float THB = EUR * 39.4f;
		
		Console.WriteLine("EUR is {0:N} THB is {1:N}",EUR, THB);
		
	}
}	
