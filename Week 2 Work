// Sample 1
using System;
					
public class Program
{
	public static void Main()
	{
		string name = "Valinkorn", BD = "21/05/2006";
		int âge = 18;
		float GPA = 3.00f;
		Console.WriteLine("Name {0} \nâge {1} BD {2}", name,âge,BD);
		Console.WriteLine("GPA {0:F}", GPA);
	}
}

